<div id="search-params">
  <div class="input-group mb-3">
    <select class="form-select" onchange="updateQueryString(event)">
      <% if query_params.present? %>
        <% query_params.each do |param| %>
          <option value="<%= param[:value] %>"><%= param[:name] %></option>
        <% end %>
      <% end %>
    </select>
    <input type="text" class="form-control" onkeyup="updateQueryString(event)">
    <button class="btn btn-outline-secondary" type="button" onclick="addSearchField(event)">+</button>
  </div>
</div>
<div id="search-url"></div>
<%= form_tag search_path, method: 'get' do %>
  <div class='row'></div>
  <%= hidden_field_tag(:query_string) %>
  <%= button_tag id: 'search-button', class: 'btn btn-outline-success' do %>
    Find
  <% end %>
<% end %>
