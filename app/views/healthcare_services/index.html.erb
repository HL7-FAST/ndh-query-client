<div class='container-fluid'>
  <h3 class='row text-white'>Healthcare Services Search</h3>
  <div class='row'>
    <div class='col-3'>
      <%= form_for :healthcare_service, url: search_healthcare_services_path, remote: true, method: "get" do |f| %>
        <!--<%= f.label :insurance_plan %><br />
        <%= f.select :insurance_plan, @plans, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>
        <%= f.label :network %><br />
        <%= f.select :network, grouped_options_for_select(@networks), { include_blank: true },
                { class: 'custom-select bg-dark text-white' } %>-->
         <%= f.label :category %><br />
        <%= f.select :category, @categories, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>
        <%= f.label :specialty %><br />
        <%= f.select :specialty, @specialties, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>
        <%= f.label :type %><br />
        <%= f.select :type, @types, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>
        <%= f.label :program %><br />
        <%= f.select :program, @programs, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>

        <!--<%= f.label :veteran, "Veteran?" %><br />
        <%= f.check_box :'healthcareservice-program-requirement-va-status', {class: 'form-control bg-dark text-white'}, "true" %>-->

        <%= f.label :zip %><br />
        <%= f.text_field :zip, class: 'form-control bg-dark text-white' %>
        <%= f.label :radius %><br />
        <%= f.text_field :radius, class: 'form-control bg-dark text-white' %>
        <%= f.label :city %><br />
        <%= f.text_field :city, class: 'form-control bg-dark text-white' %>
        <%= f.label :name %><br />
        <%= f.text_field :name, class: 'form-control bg-dark text-white' %>
        <%= f.label :organization %><br />
        <%= f.text_field :organization, class: 'form-control bg-dark text-white' %>

        <%= f.label :new_patient %><br />
        <%= f.select :new_patient, @newpatientoptions, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>
        <h4>Requirements:</h4>
        <%= f.label :birth_sex %><br />
        <%= f.select :birth_sex, @birthsexoptions, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>
                
        <%= f.label :veteran_status %><br />
        <%= f.select :veteran_status, @veteranstatusoptions, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>

        <%= f.label :insurance_status %><br />
        <%= f.select :insurance_status, @insurancestatusoptions, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>

        <%= f.label :employment_status %><br />
        <%= f.select :employment_status, @employmentstatusoptions, { include_blank: true }, 
                { class: 'custom-select bg-dark text-white' } %>

        <%= f.submit 'Find', class: 'btn btn-outline-success', id: 'healthcare-service-search-button' %>
      <% end %>
    </div>
    <div class='col-9'>
      <div id="healthcare-service-query">
      </div>
      <div id="pagination">
      </div>
      <table id="healthcare-services-table" class="table table-dark">
      </table>
    </div>
  </div>
</div>
