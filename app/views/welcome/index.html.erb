<section class='container'>
	<% if @client %>
		<p class="text-success client-connected text-center mb-4">
			Connected to <%= cookies[:server_url] -%>
		</p>
		<table class="table table-dark table-striped">
			<tbody>
				<tr>
					<td><%= @endpoints %> <%= link_to "Endpoints", endpoints_path %></td>
					<td><%= @healthCareServices %> <%= link_to "Healthcare Services", healthcare_services_path %></td>
					<td><%= @insurancePlans %> <%= link_to "Insurance Plans", insurance_plans_path %></td>
				</tr>
				<tr>
					<td><%= @locations %> <%= link_to "Locations", locations_path %></td>
					<td><%= @networks %> <%= link_to "Networks", networks_path %></td>
					<td><%= @organizations %> <%= link_to "Organizations", organizations_path %></td>
				</tr>
				<tr>
					<td><%= @organizationAffiliations %> <%= link_to "Organization Affiliations", organization_affiliations_path %></td>
					<td><%= @practitioners %> <%= link_to "Practitioners", practitioners_path %></td>
					<td><%= @practitionerRoles %> <%= link_to "PractitionerRoles", practitioner_roles_path %></td>
				</tr>
			</tbody>
		</table>
	<% else %>
		<p class="text-danger text-center mb-4">No Connection Established</p>
	<% end %>
	
	<section class='row justify-content-center'>
		<%= form_tag root_path, method: 'get', class: 'd-flex gap-2', id: 'server-form' do %>
			<div class='flex-grow-1'>
				<%= text_field_tag :server_url, (cookies[:server_url] or 'https://ndh-server.fast.hl7.org/fhir'), class: 'form-control', placeholder: 'https://ndh-server.fast.hl7.org/fhir' %>
			</div>
			<%= button_tag class: 'btn btn-primary', id: 'server-url' do %>
				Lookup
			<% end %>
		<% end %>
	</section>
</section>
